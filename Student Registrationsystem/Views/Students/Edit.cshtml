@model Students;
<h3>Update Student</h3>
<br />

<form method="post" asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label class="form-label"> Student Name</label>
        <input asp-for="@Model.std_Fullname"  class="form-control" />
    </div>

    <br />
    <div class="form-group">
        <label class="form-label"> Student Phone</label>
        <input type="text" asp-for="std_Phone" class="form-control"   />
    </div>
    <div class="form-group">
        <label class="form-label"> Student Age</label>
        <input asp-for="std_age"  class="form-control" type="number" />
    </div>

    <br />

    <a class="btn btn-danger" asp-action="Index">Cancel</a>
    <button type="submit" class="btn btn-primary">Save</button>

</form>